<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="com.domain.Department" table="DEPARTMENT_DETAILS_2">
        <id name="id" type="java.lang.Long">
            <column name="DEPARTMENT_ID" />
            <generator class="identity" />
        </id>
        
        <property name="name" type="java.lang.String">
            <column name="DEPARTMENT_NAME" />
        </property>
        
        <set name="employees" table="DEPARTMENT_EMPLOYEE_DETAILS_2" 
        	cascade="save-update,delete-orphan" inverse="true" 
        	lazy="true" >
            <key>
                <column name="DEPARTMENT_ID"  />
            </key>
            <many-to-many column="EMPLOYEE_ID" unique="true" 
            	class="com.domain.Employee" />
        </set>
    </class>
</hibernate-mapping>














